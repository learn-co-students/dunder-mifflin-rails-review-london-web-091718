<% if flash[:errors] %>

  <ul>
    <% flash[:errors].each do |error| %>
      <li>
        <%= error %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_for @employee do |f| %>

<%= f.label 'First Name:' %>
<%= f.text_field :first_name %>
</br>
<%= f.label 'Last Name:' %>
<%= f.text_field :last_name %>
</br>
<%= f.label 'Alias:' %>
<%= f.text_field :alias %>
</br>
<%= f.label 'Office:' %>
<%= f.text_field :office %>
</br>
<%= f.label 'Title:' %>
<%= f.text_field :title %>
</br>
<%= f.label 'Employee Image:' %>
<%= f.url_field :img_url %>
</br>
<%= f.label 'Select A Dog:' %>
<%= f.collection_select :dog_id, @dogs, :id, :name %>
</br>
<%= f.submit %>
<% end %>

<%= form_tag employee_path, method: 'delete' do %>
<%=  submit_tag 'Delete Employee' %>
<% end %>
